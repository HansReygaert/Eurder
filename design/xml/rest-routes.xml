<?xml version="1.0" encoding="UTF-8" ?>
<xml>
    <routes route="/">
        <login route="login/">
            <POST>
                UserDto{
                    memberId + password
                }
            </POST>
            <GET>
               <header>
                   <!-- if RequestHeader is successful -->
                   <state>LoginSuccessful</state>
                   <redirect route="/">
                       <responseHeader>
                           Pepper+userId+Salt
                       </responseHeader>
                   </redirect>
               </header>
            </GET>
        </login>
        <register route="register/">
            <POST>
                <!-- admins do not register through
                 this route instead they
                 update a member to
                 the correct role -->
                MemberDto{
                    <firstname></firstname>
                    <lastName></lastName>
                    <email></email>
                    <address></address>
                    <phoneNumber></phoneNumber>
                }
            </POST>
        </register>
        <items route="items/">
            <header optional="true">userId</header>
            <GET>
                itemDto[]{

                }
            </GET>
            <item route="{item}" >

            </item>
        </items>
    </routes>

</xml>